<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/fira_sansot_2</item>
        <item name="checkboxStyle">@style/AstraCheckBox</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="buttonStyle">@style/AstraButton</item>
        <item name="spinnerStyle">@style/AstraSpinner</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--Bottom navigation view-->
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveState</item>
        <item name="itemTextAppearanceInactive">@style/InactiveState</item>
        <item name="android:colorPrimary">@color/colorBaseOrange</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/fira_sansot_1</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="InactiveState">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/fira_sansot_1</item>
        <item name="android:colorPrimary">@android:color/black</item>
    </style>

    <style name="ActiveState">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorBaseOrange</item>
        <item name="android:fontFamily">@font/fira_sansot_1</item>
        <item name="android:colorPrimary">@color/colorBaseOrange</item>
    </style>

    <!--Checkbox-->
    <style name="AstraCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!--Content-->
    <style name="WrapContent">
        <item name="android:paddingBottom">60dp</item>
        <item name="android:background">@drawable/content_bg</item>
    </style>

    <!--Gradient button-->
    <style name="AstraButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--Address-->
    <style name="AddressTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorAddressOrange</item>
    </style>

    <style name="AddressValue" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--Calculator-->
    <style name="CalcEditTextOutput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_calculator_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="CalcEditTexInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!--Profile-->

    <style name="ProfileTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAddressOrange</item>
    </style>

    <style name="ProfileValue" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AstraSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:dropDownSelector">@drawable/arrow_right</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LoanItemTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="LoanItemValue" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/fira_sansot_2</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="KeyboardDigit" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/fira_sansot_2</item>
        <item name="android:button">@null</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/keyboard_digit_bg</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--Details loan-->
    <style name="LoanDetailsTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorAddressOrange</item>
    </style>

    <style name="LoanDetailsValue" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/fira_sansot_2</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/colorAddressOrange</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
